{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Linux x64 Clang",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/linux_x64_clang/GameLauncher",
			"args": ["-project", "/home/luciomf/Code/DotCry/Game.cryproject"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{ "name": "__NV_PRIME_RENDER_OFFLOAD", "value": "1" },
				{ "name": "__NV_PRIME_RENDER_OFFLOAD_PROVIDER", "value": "NVIDIA-G0" },
				{ "name": "__VK_LAYER_NV_optimus", "value": "NVIDIA_only" },
				{ "name": "__GLX_VENDOR_LIBRARY_NAME", "value": "nvidia" },
				{ "name": "VK_ICD_FILENAMES", "value": "/usr/share/vulkan/icd.d/nvidia_icd.json" },
				{ "name": "ENABLE_PRIMUS_LAYER", "value": "1" }
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
